# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Home.index()


GET     /api/devices                           controllers.api.DeviceService.devices
GET     /api/device/:id                        controllers.api.DeviceService.show(id: Long)
POST    /api/device                            controllers.api.DeviceService.create
PUT     /api/device/:id                        controllers.api.DeviceService.save(id: Option[Long])
DELETE  /api/device/:id                        controllers.api.DeviceService.delete(id: Long)


GET     /api/wordpress/authors                           controllers.api.WordpressService.authors

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
